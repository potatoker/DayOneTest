<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:id="@+id/item.explore.cardView"
    android:paddingBottom="20dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item.explore.profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:elevation="8dp"
                android:src="@drawable/planet_yellow"
                app:border_color="#FFF"
                app:border_width="2dp"
                app:layout_scrollFlags="scroll" />

            <TextView
                android:id="@+id/item.explore.name"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Raymond"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>



        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/item.explore.day_img"
                android:layout_width="210dp"
                android:layout_height="210dp"
                tools:src="@drawable/planet_navy"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/item.explore.day_desc"
                android:layout_width="210dp"
                android:layout_height="100dp"
                android:textSize="10sp"
                tools:text="真是糟糕的一天，踩了狗屎"
                android:layout_alignBottom="@+id/item.explore.day_img"
                android:textColor="@android:color/white"
                android:background="#99000000"/>

            <ImageView
                android:id="@+id/item.explore.img1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/item.explore.day_img"
                android:layout_alignTop="@id/item.explore.day_img"
                tools:src="@drawable/planet_red" />

            <ImageView
                android:id="@+id/item.explore.img2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@drawable/planet_yellow"
                android:layout_alignBottom="@+id/item.explore.day_img"
                android:layout_toEndOf="@+id/item.explore.day_img" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp">

            <ToggleButton
                android:id="@+id/item.explore.thumbup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/thumb_up"
                android:checked="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textOff=""
                android:textOn=""
              />

            <ImageView
                android:id="@+id/item.explore.comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/comment"
                android:layout_marginLeft="10dp"

                />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/item.explore.more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_more_horiz_black_48dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/item.explore.comment1.layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item.explore.comment.user1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="张荣昊"
                    android:textColor="#495A62"/>

                <TextView
                    android:id="@+id/item.explore.comment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    tools:text="好可爱的小猫"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item.explore.comment2.layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item.explore.comment.user2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="张荣昊"
                    android:textColor="#495A62"/>

                <TextView
                    android:id="@+id/item.explore.comment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    tools:text="好可爱的小猫"/>

            </LinearLayout>

        </LinearLayout>






    </LinearLayout>


</android.support.v7.widget.CardView>